<div class="row">
  <div class="col-sm-1 col-xs-2">
    <%= link_to(@option.question.user) do %>
        <%= image_tag(@option.question.user.image_url, :class => 'list-profile-image') if @option.question.user.image? %>
    <% end %>
  </div>

  <div class="col-sm-9 col-xs-10">
    <div class="row">
      <div class="col-sm-7 col-xs-12">
        <%= link_to(@option.question.user, :class=> 'link-text') do %>
            <%= @option.question.user.first_name + " " + @option.question.user.last_name %> <br/>
        <% end %>

        <%= link_to(@option.question, :class=> 'link-text') do %>
            <%= @option.question.content %>
        <% end %>
      </div>
      <div class="col-sm-2 col-cs-12">
        <div class="category-label category-<%= @option.question.category.name.downcase[0..2]%>">
          <%= @option.question.category.name %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-xs-12">
<%= form_for(@option) do |f| %>
  <% if @option.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@option.errors.count, "error") %> prohibited this option from being saved:</h2>

      <ul>
      <% @option.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :question_id %>

  <br />

  <div class="field">
    <%= f.label :content, 'Option:' %><br />
    <%= f.text_area :content, :rows => 2 %>
  </div>
  </div>
</div>

  <br />

  <div class="actions">
    <%= f.submit 'Save Option', :class=> 'btn btn-primary btn' %>
    <%= link_to 'Cancel', :back, :class => 'btn btn-default btn' %>
  </div>
<% end %>
